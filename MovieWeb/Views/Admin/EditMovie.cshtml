@using WebApp.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
	Layout = "_AdminLayout";
	ViewData["Title"] = "Edit Movie";
	Movie movie = ViewBag.Movie;
}
@*<style>
	label{
		margin-right:100px;
	}
</style>*@

<h1>Edit Movie</h1>
<form method="post" asp-action="EditMovie">
	<p>Movie Id:</p>
	<input asp-for="@movie.MovieId" readonly />
	<p>Title:</p>
	<input asp-for="@movie.Title" />
	<p>Year:</p>
	<input asp-for="@movie.Year" />
	<p>Image:</p>
	<input asp-for="@movie.Image" />
	<p>Description:</p>
	<input asp-for="@movie.Description"/>
	<p>Genre:</p>
	<select asp-for="@movie.GenreId" asp-items="ViewBag.GenreId"></select><br><br />
	<input type="submit" value="Update" />
</form>
