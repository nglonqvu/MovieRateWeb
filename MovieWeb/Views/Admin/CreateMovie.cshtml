@using WebApp.Models;
@model WebApp.Models.Movie
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



@{
	Layout = "_AdminLayout";
	ViewData["Title"] = "Create Movie";
}
@*<style>
